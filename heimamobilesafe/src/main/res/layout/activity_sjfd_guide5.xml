<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itheima="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:text="5.恭喜您，设置完成"
        style="@style/home_commen_title"
        />
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选中开启防盗保护"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/step_5"
            />
        <Button
            android:id="@+id/fjfd_guide5_next"
            android:onClick="toNext"
            android:text="下一步"
            style="@style/sjfd_commen_button_next" />
        <Button
            android:id="@+id/fjfd_guide5_pre"
            android:onClick="toPre"
            android:text="上一步"
            style="@style/sjfd_commen_button_pre" />
        <com.itheima.playgame.view.GuideIndicater
            itheima:step="5"
            itheima:total="5"
            style="@style/sjfd_guide_steps" />
    </RelativeLayout>
</LinearLayout>
